<p id="notice"><%= notice %></p>

<h1>
  <%= @post.title %>
</h1>

<p>
  <%= simple_format @post.content %>
</p>

<hr />

<h2>Comentarios</h2>

<% @post.comments.each do |comment| %>
	<%= comment.content %>	
	<hr />
<% end %>

<%= form_for(@comment) do |f| %>
	Mi comentario:
	<%= f.text_area :content %>
	<%= f.hidden_field :post_id %>
	<%= f.submit "Comentar" %>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
